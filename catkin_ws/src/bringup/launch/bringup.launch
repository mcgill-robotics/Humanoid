<launch>
    <include file="$(find controls)/launch/policy_control.launch"></include>
    
    <node name="rosserial" pkg="rosserial_python" type="serial_node.py" respawn="false" output="screen">
        <param name="port" type="string" value="/dev/ttyACM0"/>
        <param name="baud" type="int" value="57600"/>
    </node>

    <include file="$(find sim)/launch/visualization.launch"></include>
</launch>